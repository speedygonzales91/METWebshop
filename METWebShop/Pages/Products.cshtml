@page "{productCatType:int}"
@model METWebShop.Pages.ProductModel
@{
}


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <img src="~/images/accordions/BemelegitesCsomag.png" class="img-fluid" />
        </div>
    </div>
    

    <div class="row gallery">
        
        
        @if (Model.ProductList != null)
        {
            @foreach (var product in Model.ProductList)
            {

        <div class="col-lg-3 col-md-4 col-xs-6">
            <p>@product.Name</p>
            <figure><img class="img-fluid" src="~/images/products/@product.ImagePath" alt="Random Image"></figure>
            <p>@product.Price <img src="~/images/visualElements/Coin.png" class="img-fluid" style="max-height: 40px;" /></p>
            <p><input type="text" style="max-width: 20%" /> DB</p>
            <p><img src="~/images/visualElements/Kosarba.png" class="img-fluid" style="max-height: 60px;" /></p>
        </div>
            }
        }


    </div>

</div>